<tr class="bg-white border-b bg-gray-900 border-gray-700">
  <td class="text-center"><%= passenger.first_name %></td>
  <td class="text-center"><%= passenger.last_name %></td>
  <td class="text-center"><%= passenger.contact_number %></td>
  <td class="text-center"> <%= passenger.email %></td>
  <td class="text-center"> <%= passenger.number_of_seat %></td>
  <td class="text-center">  
    <% if action_name != "show" %>
      <%= link_to "Details", passenger, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %> 
      <%= link_to 'Edit', edit_passenger_path(passenger), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <% end %>
  </td>
</tr>
