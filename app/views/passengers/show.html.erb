<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

      <div id="<%= dom_id @passenger %>">

        <p class="my-5">
          <strong class="block font-medium mb-1">First name:</strong>
          <%= @passenger.first_name %>
        </p>

        <p class="my-5">
          <strong class="block font-medium mb-1">Last name:</strong>
          <%= @passenger.last_name %>
        </p>

        <p class="my-5">
          <strong class="block font-medium mb-1">Contact number:</strong>
          <%= @passenger.contact_number %>
        </p>

        <p class="my-5">
          <strong class="block font-medium mb-1">Email:</strong>
          <%= @passenger.email %>
        </p>

        <p class="my-5">
          <strong class="block font-medium mb-1">Number of seat:</strong>
          <%= @passenger.number_of_seat %>
        </p>
      </div>

    <%= link_to 'Edit this passenger', edit_passenger_path(@passenger), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this passenger', passenger_path(@passenger), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to 'Back to passengers', service_passengers_path(@passenger.service), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
